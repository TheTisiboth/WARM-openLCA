.ct-label
	font-size .9em !important
	padding 0 5px !important
	text-align center !important

.ct-legend
	margin-top 40px
	padding 10px
	border 1px solid $borderColor
	border-radius 5px

	.ct-legend-entry
		font-size 10pt
		height 20px
		width 20px
		margin 5px
		display inline-block
		color white

svg
	overflow overlay !important 

.ct-chart
	
	&.warm-chart
		width 80%
		height 80%

	.tooltip
		color rgba(64, 64, 64, 1)
		background $lightBackgroundColorTransparent 
		border-radius 5px
		border 1px solid $borderColorTransparent
		padding 10px
		position absolute
		opacity 1
		
.one-bar-per-series

	.ct-chart, .ct-legend

		.ct-bar		
			stroke-width 40px

		.ct-series-a 

			.ct-bar 
				stroke $blue1 !important

			&.ct-legend-entry
				background-color $blue1 

		.ct-series-b 

			.ct-bar 
				stroke $red1 !important

			&.ct-legend-entry
				background-color $red1 

