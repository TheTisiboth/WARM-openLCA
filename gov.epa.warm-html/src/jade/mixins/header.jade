mixin header(subtitle, reportType, forExport)
	- var title = 'Waste Reduction Model (WARM)';
	header.fixed
		if subtitle
			img.logo.pull-left(src='data:image/png;base64,') 
			div.big-text.pull-left #{title}
				p
					small #{subtitle} 
		else
			img.logo(src='data:image/png;base64,') 
			span.bigger-text #{title}
		if forExport
			div.top-navigation.pull-right
				button.btn.btn-warm.to-summary(data-type='summary') Summary Report
				button.btn.btn-warm.to-analysis(data-type='analysis') Analysis Report
				button.btn.btn-warm.to-charts(data-type='charts') Charts
		block
